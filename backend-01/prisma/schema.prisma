generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id           Int         @id @default(autoincrement())
  name         String
  email        String      @unique
  password     String
  adminprofile AdminShop[]
}

model AdminShop {
  id           Int       @id @default(autoincrement())
  image        String? // Optional image URL or base64 string
  latitude     Float? // Optional latitude
  longitude    Float? // Optional longitude
  address      String? // Optional address
  mobilenumber String
  occupation   String
  speclization String?
  timein       String
  timeout      String
  price        Int
  AdminId      Int
  Admin        Admin     @relation(fields: [AdminId], references: [id])
  bookings     Booking[]
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  email      String       @unique
  password   String
  isVerified Boolean      @default(false)
  createdAt  DateTime     @default(now())
  bookings   Booking[]
  profile    userprofile? @relation(name: "UserToUserProfile")
}

model userprofile {
  id           Int     @id @default(autoincrement())
  image        String?
  latitude     Float?
  longitude    Float?
  address      String?
  mobilenumber String
  UserID       Int     @unique

  user User @relation(name: "UserToUserProfile", fields: [UserID], references: [id])
}

model Booking {
  id        Int      @id @default(autoincrement())
  shopId    Int
  userId    Int
  duration  Int // in minutes
  startTime DateTime
  endTime   DateTime
  createdAt DateTime @default(now())

  shop AdminShop @relation(fields: [shopId], references: [id])
  user User      @relation(fields: [userId], references: [id])
}
